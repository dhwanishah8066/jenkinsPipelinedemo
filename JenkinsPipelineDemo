pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello, World!'
            }
        }
stage('Build') {
            steps {
                echo 'Hello, World!'
            }
stage('Test') {
            steps {
                echo 'Hello, World!'
            }
stage('Release') {
            steps {
                echo 'Hello, World!'
            }
    }
}
} 
   stages {
        stage('Install Newman') {
            steps {
                sh 'npm install -g newman newman-reporter-htmlextra'
            }
        }
        stage('Run API Tests') {
            steps {
                sh 'newman run Practise_APIs_Postman_Collection.json -r htmlextra'
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'newman/*.html', fingerprint: true
        }
    }
}
